# ============================================
# WALLET CONNECT
# ============================================

# WalletConnect Project ID
# Get yours at: https://cloud.walletconnect.com/
NEXT_PUBLIC_WALLETCONNECT_PROJECT_ID=your_project_id_here

# ============================================
# DATABASE (SERVER-SIDE ONLY)
# ============================================

# PostgreSQL connection for parcel metadata
DATABASE_URL=postgresql://user:password@localhost:5432/hyperland

# JWT secret for session management
JWT_SECRET=your_random_secret_key_here_min_32_characters

# ============================================
# FEATURE FLAGS
# ============================================

NEXT_PUBLIC_ENABLE_MARKETPLACE=true
NEXT_PUBLIC_ENABLE_TAX_PAYMENTS=true
NEXT_PUBLIC_ENABLE_TAX_PREPAYMENT=true
NEXT_PUBLIC_ENABLE_BATCH_OPERATIONS=true

# ============================================
# SYSTEM PARAMETERS (PUBLIC INFO)
# ============================================

NEXT_PUBLIC_PROTOCOL_FEE=20          # 20%
NEXT_PUBLIC_TAX_RATE=5               # 5% per cycle
NEXT_PUBLIC_TAX_CYCLE_DAYS=7         # 7 days
NEXT_PUBLIC_TOTAL_LAND_SUPPLY=21000000
NEXT_PUBLIC_BRC_COORDINATE_OFFSET=10000
